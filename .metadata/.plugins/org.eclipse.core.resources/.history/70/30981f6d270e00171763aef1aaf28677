import:
	sko.std.math

int nextIntP;
int intMaxP;
int intMulP;
float nextFloat;

// initializes the prime random to a given prime.
int initPrime(int max) {
	intMaxP = max;
	intMulP = 7;
	nextIntP = 1;
	return intP();
}

// returns the next int between 0 and the specified prime -2.
int intP() {
	nextIntP = int: math.mod(iMilP * nextIntP, intMaxP);
	return nextIntP - 1;
}