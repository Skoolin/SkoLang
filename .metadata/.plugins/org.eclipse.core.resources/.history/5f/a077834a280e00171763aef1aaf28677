import:
	sko.std.math
	sko.std.system

int nextIntP;
int intMaxP;
int intMulP;
float nextFloat;

// initializes the prime random to a given prime.
int initPrime(int max) {
	intMaxP = max;
	intMulP = 2;
	nextIntP = int: math.mod(int: system.now(), intMaxP);
	return intP();
}

// returns the next int between 0 and the specified prime -2.
int intP() {
	nextIntP = int: math.mod(intMulP * nextIntP, intMaxP);
	return nextIntP - 1;
}